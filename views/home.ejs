<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <!-- Axios'u ekliyoruz -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/web3@latest/dist/web3.min.js"></script>

</head>

<body>
    <h1>Welcome to the Home Page</h1>
    <h2>User Information</h2>
    <p><strong>Email:</strong>
        <%= typeof response !=='undefined' ? response.email : 'N/A' %>
    </p>
    <p><strong>Role:</strong>
        <%= typeof response !=='undefined' ? response.role : 'N/A' %>
    </p>
    <button id="twitterButton">Twitter Hesabı Ekle</button>
    <h3>Connect Metamask</h3>
    <button type="button" id="connectMetamask">Connect Metamask</button>

    <script>
        // Buton tıklama olayını dinleme
        document.getElementById('twitterButton').addEventListener('click', function () {
            const token = "<%= typeof token !== 'undefined' ? token : '' %>";  // Backend'den gelen token'ı kullan
            if (token) {
                axios.post('/twitter/add', {}, {
                    headers: {
                        'Authorization': `Bearer ${token}`  // Token'ı başlık olarak ekle
                    }
                }).then(response => {
                    console.log(response);
                    const redirectUrl = response.data.redirectUrl; // Yönlendirme URL'sini al
                    // console.log(redirectUrl);
                    window.location.href = redirectUrl;  // Yönlendirme yap
                }).catch(error => {
                    console.error(error);
                });
            } else {
                console.error('Token is not defined');
            }
        });
    </script>
    <script>
        async function connectMetamask() {
            const token = "<%= typeof token !== 'undefined' ? token : '' %>";

            if (window.ethereum) {
                try {
                    // Kullanıcıdan izin isteyin
                    const accounts = await window.ethereum.request({ method: 'eth_requestAccounts' });
                    const userAccount = accounts[0];
                    axios.post('/metamask/nonce', { userAccount }, {
                        headers: {
                            'Authorization': `Bearer ${token}`
                        }
                    }).then(response => {
                        // Sunucudan dönen yanıtı burada işleyin
                        console.log("Nonce değeri:", response.data); // Yanıt verisini console'a yazdır
                    }).catch(error => {
                        // Hata durumunda burada işleyin
                        console.error("Hata:", error); // Hata mesajını console'a yazdır
                    });
                    // console.log("Nonce değeri:", response.JSON());
                    // const nonce = response.data.nonce;
                    const nonce = 1;


                    const msgParams = JSON.stringify({
                        domain: {
                            chainId: 1,
                            name: 'legit',
                            verifyingContract: '0xCcCCccccCCCCcCCCCCCcCcCccCcCCCcCcccccccC',
                            version: '1',
                        },
                        message: {
                            Mesaj: `
Welcome to Legit!
Click 'Sign' button to connect your wallet to Midle.
This request will not trigger any blockchain transaction or cost any gas fees.

Wallet address:
${userAccount}

Nonce:
${nonce}
`,
                            from: {
                                name: "Legit", // Uygulamanın adı
                                wallets: [userAccount], // Kullanıcının cüzdan adresi
                            },
                        },
                        primaryType: 'Mail',
                        types: {
                            EIP712Domain: [
                                { name: 'name', type: 'string' },
                                { name: 'version', type: 'string' },
                                { name: 'chainId', type: 'uint256' },
                                { name: 'verifyingContract', type: 'address' },
                            ],
                            Mail: [
                                { name: 'Mesaj', type: 'string' },
                                { name: 'from', type: 'Person' },
                            ],
                            Person: [
                                { name: "name", type: "string" },
                                { name: "wallets", type: "address[]" },
                            ],
                        },
                    });
                    const signature = await window.ethereum.request({
                        method: 'eth_signTypedData_v4',
                        params: [userAccount, msgParams, nonce],
                    });
                    console.log("İmzalanan veri:", signature);
                    axios.post('/metamask/add', {
                        nonce: nonce,  // Nonce değeri
                        signature: signature,  // İmzalanmış veri
                        walletAddress: userAccount // Kullanıcının cüzdan adresi
                    }, {
                        headers: {
                            'Authorization': `Bearer ${token}`, // Gerekli token varsa ekleyin
                            'Content-Type': 'application/json'
                        }
                    }).then(response => {
                        console.log("Backend'den gelen yanıt:", response.data);
                    }).catch(error => {
                        console.error("Hata:", error);
                    });
                } catch (error) {
                    // Kullanıcı isteği reddederse hata yakalayın
                    console.error("Kullanıcı MetaMask isteğini reddetti:", error);
                    alert("MetaMask isteği reddedildi.");
                }
            } else {
                alert("Lütfen MetaMask'i kurun.");
            }

        }

        // Bağlantıyı başlatmak için bir buton ekleyin
        document.getElementById('connectMetamask').addEventListener('click', connectMetamask);
    </script>
</body>

</html>