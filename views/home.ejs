<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <!-- Axios'u ekliyoruz -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/web3@latest/dist/web3.min.js"></script>

</head>

<body>
    <h1>Welcome to the Home Page</h1>
    <h2>User Information</h2>
    <p><strong>Email:</strong>
        <%= typeof response !=='undefined' ? response.email : 'N/A' %>
    </p>
    <p><strong>Role:</strong>
        <%= typeof response !=='undefined' ? response.role : 'N/A' %>
    </p>
    <button id="twitterButton">Twitter Hesabı Ekle</button>
    <button id="connectButton">MetaMask ile Giriş Yap</button>

    <script>
        // Buton tıklama olayını dinleme
        document.getElementById('twitterButton').addEventListener('click', function () {
            const token = "<%= typeof token !== 'undefined' ? token : '' %>";  // Backend'den gelen token'ı kullan
            if (token) {
                axios.post('/twitter/add', {}, {
                    headers: {
                        'Authorization': `Bearer ${token}`  // Token'ı başlık olarak ekle
                    }
                }).then(response => {
                    console.log(response);
                    const redirectUrl = response.data.redirectUrl; // Yönlendirme URL'sini al
                    // console.log(redirectUrl);
                    window.location.href = redirectUrl;  // Yönlendirme yap
                }).catch(error => {
                    console.error(error);
                });
            } else {
                console.error('Token is not defined');
            }
        });
    </script>
    <script>
        async function connectMetaMask() {
            // Kullanıcının MetaMask uzantısının yüklü olup olmadığını kontrol et
            if (typeof window.ethereum !== 'undefined') {
                // Web3 nesnesini oluştur
                const web3 = new Web3(window.ethereum);

                try {
                    // Kullanıcıdan cüzdanına bağlanması için izin iste
                    const accounts = await window.ethereum.request({ method: 'eth_requestAccounts' });
                    console.log('Bağlanan cüzdan adresi:', accounts[0]);
                } catch (error) {
                    // İzin hatasını yakala ve konsola yazdır
                    console.error("İzin hatası:", error);
                    alert("MetaMask ile bağlanma isteği reddedildi. Hata: " + error.message);
                }
            } else {
                // MetaMask yüklenmemişse kullanıcıyı bilgilendir
                alert('Lütfen MetaMask\'i yükleyin.');
            }
        }

        // Bağlantıyı başlatmak için bir buton ekleyin
        document.getElementById('connectButton').addEventListener('click', connectMetaMask);
    </script>
</body>

</html>